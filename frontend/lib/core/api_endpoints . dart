// آدرس‌های API سرور
class ApiEndpoints {
  static const String baseUrl = 'https://api.hoosbazaar.ir/v1';
  
  // احراز هویت
  static const String login = '$baseUrl/auth/login';
  static const String register = '$baseUrl/auth/register';
  static const String logout = '$baseUrl/auth/logout';
  static const String refreshToken = '$baseUrl/auth/refresh';
  
  // کاربران
  static const String userProfile = '$baseUrl/users/profile';
  static const String updateProfile = '$baseUrl/users/update';
  static const String uploadAvatar = '$baseUrl/users/avatar';
  
  // آگهی‌ها
  static const String adsList = '$baseUrl/ads';
  static const String createAd = '$baseUrl/ads/create';
  static const String adDetail = '$baseUrl/ads'; // + /{id}
  static const String updateAd = '$baseUrl/ads'; // + /{id}
  static const String deleteAd = '$baseUrl/ads'; // + /{id}
  static const String myAds = '$baseUrl/ads/my';
  static const String searchAds = '$baseUrl/ads/search';
  
  // دسته‌بندی‌ها
  static const String categories = '$baseUrl/categories';
  static const String subcategories = '$baseUrl/categories'; // + /{id}/sub
  
  // قیمت‌گذاری هوشمند
  static const String aiPricing = '$baseUrl/ai/pricing/suggest';
  static const String marketAnalysis = '$baseUrl/ai/analysis/market';
  static const String pricePrediction = '$baseUrl/ai/prediction';
  
  // آپلود فایل
  static const String uploadImage = '$baseUrl/upload/image';
  static const String uploadMultiple = '$baseUrl/upload/multiple';
  
  // پیام‌ها و چت
  static const String messages = '$baseUrl/messages';
  static const String sendMessage = '$baseUrl/messages/send';
  static const String conversations = '$baseUrl/messages/conversations';
  
  // نظرات و امتیاز
  static const String reviews = '$baseUrl/reviews';
  static const String addReview = '$baseUrl/reviews/add';
  static const String userReviews = '$baseUrl/reviews/user'; // + /{userId}
  
  // اطلاع‌رسانی
  static const String notifications = '$baseUrl/notifications';
  static const String markNotificationRead = '$baseUrl/notifications/read';
  
  // آمار و گزارش
  static const String statistics = '$baseUrl/stats';
  static const String userStats = '$baseUrl/stats/user';
  static const String platformStats = '$baseUrl/stats/platform';
  
  // تنظیمات
  static const String appSettings = '$baseUrl/settings/app';
  static const String userSettings = '$baseUrl/settings/user';
  
  // نسخه توسعه
  static const String devBaseUrl = 'http://localhost:3000/v1';
  static bool isProduction = true;
  
  static String getBaseUrl() {
    return isProduction ? baseUrl : devBaseUrl;
  }
  
  // ساخت URL کامل
  static String buildUrl(String endpoint, [Map<String, dynamic>? params]) {
    String url = '${getBaseUrl()}$endpoint';
    
    if (params != null && params.isNotEmpty) {
      final queryString = Uri(queryParameters: params.map((k, v) => MapEntry(k, v.toString()))).query;
      url += '?$queryString';
    }
    
    return url;
  }
}
