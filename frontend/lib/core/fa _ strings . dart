  // ----- تاریخ و زمان -----
  static String timeAgo(int minutes) {
    if (minutes < 1) return 'همین الان';
    if (minutes < 60) return '$minutes دقیقه قبل';
    if (minutes < 1440) return '${(minutes / 60).floor()} ساعت قبل';
    return '${(minutes / 1440).floor()} روز قبل';
  }
  
  // ----- قیمت -----
  static String formatPrice(int price) {
    // تبدیل ۱۰۰۰۰۰۰ به "۱,۰۰۰,۰۰۰ تومان"
    final priceStr = price.toString();
    String result = '';
    int count = 0;
    
    for (int i = priceStr.length - 1; i >= 0; i--) {
      count++;
      result = priceStr[i] + result;
      if (count % 3 == 0 && i != 0) {
        result = ',$result';
      }
    }
    
    return '$result تومان';
  }
}
