// مخزن داده فروشگاه
import '../entities/shop_entity.dart';

abstract class ShopRepository {
  Future<ShopEntity> createShop(ShopEntity shop);
  Future<ShopEntity> updateShop(String shopId, ShopEntity shop);
  Future<ShopEntity> getShop(String shopId);
  Future<List<ShopEntity>> getUserShops(String userId);
  Future<void> deleteShop(String shopId);
  Future<ShopEntity> updateShopTheme(String shopId, String theme);
  Future<ShopEntity> toggleShopMode(String shopId, String mode);
}
