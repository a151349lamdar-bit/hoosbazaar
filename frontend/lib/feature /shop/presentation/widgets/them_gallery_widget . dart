// گالری انتخاب قالب فروشگاه
import 'package:flutter/material.dart';

class ThemeGalleryWidget extends StatelessWidget {
  final String selectedTheme;
  final Function(String) onThemeSelected;
  
  const ThemeGalleryWidget({
    super.key,
    required this.selectedTheme,
    required this.onThemeSelected,
  });

  final List<Map<String, dynamic>> _themes = [
    {'id': 'persian-blue', 'name': 'آبی پارسی', 'color': Color(0xFF1B5E8E)},
    {'id': 'modern-red', 'name': 'قرمز مدرن', 'color': Color(0xFFC62828)},
    {'id': 'minimalist-white', 'name': 'مینیمال سفید', 'color': Color(0xFFFFFFFF)},
    {'id': 'dark-mode', 'name': 'حالت تاریک', 'color': Color(0xFF121212)},
    {'id': 'green-nature', 'name': 'سبز طبیعت', 'color': Color(0xFF2E7D32)},
  ];

  @override
  Widget build(BuildContext context) {
    return Column(
      crossAxisAlignment: CrossAxisAlignment.start,
      children: [
        const Text(
          'قالب‌های آماده',
          style: TextStyle(
            fontFamily: 'IranYekan',
            fontSize: 16,
            fontWeight: FontWeight.bold,
          ),
        ),
        const SizedBox(height: 12),
        
        Wrap(
          spacing: 12,
          runSpacing: 12,
          children: _themes.map((theme) {
            final isSelected = selectedTheme == theme['id'];
            return GestureDetector(
              onTap: () => onThemeSelected(theme['id']),
              child: Container(
                width: 80,
                child: Column(
                  children: [
                    // رنگ قالب
                    Container(
                      width: 60,
                      height: 60,
                      decoration: BoxDecoration(
                        color: theme['color'] as Color,
                        borderRadius: BorderRadius.circular(10),
                        border: Border.all(
                          color: isSelected ? Colors.blue : Colors.grey[300]!,
                          width: isSelected ? 3 : 1,
                        ),
                      ),
                    ),
                    const SizedBox(height: 8),
                    // نام قالب
                    Text(
                      theme['name'],
                      textAlign: TextAlign.center,
                      style: TextStyle(
                        fontFamily: 'Vazir',
                        fontSize: 12,
                        fontWeight: isSelected ? FontWeight.bold : FontWeight.normal,
                      ),
                    ),
                  ],
                ),
              ),
            );
          }).toList(),
        ),
      ],
    );
  }
}
